<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
               @if (Session["LogedUserFullname"] != null)
               {
                <li>@Html.ActionLink("İmdb", "AfterLogin", "Home")</li>
                <li>@Html.ActionLink("Random", "RandomFilm", "Home")</li>
                <li>@Html.ActionLink("Filmlerim", "MyFilm", "Home")</li>
                <li>@Html.ActionLink("About", "About", "Home")</li>
                <li>@Html.ActionLink("İletişim", "Contact", "Home")</li>
                <li style="margin-left:671px; font-size:20px;">@Html.ActionLink("Logout", "Logout", "Home")</li>

               }
               else
               {
                   <li style="font-size:20px";>@Html.ActionLink("İMDB FİLM ARAMA", "Index", "Home")</li>
                    @*@Html.ActionLink("İMDB FİLM ARAMA", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
                <li style="font-size:20px;" >@Html.ActionLink("İletişim", "Contact", "Home")</li>
                


                    <li style="margin-left:750px; font-size:20px;">@Html.ActionLink("Login", "login", "Home")</li>
               }
                </ul>
                @*@Html.Partial("_LoginPartial")*@
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - BATUHAN ÖZEN</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
