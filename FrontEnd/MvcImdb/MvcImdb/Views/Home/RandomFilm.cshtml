
@{
    ViewBag.Title = "RandomFilm";
}


@if (Session["LogedUserFullname"] != null)
{
    <text>
        Welcome @Session["LogedUserFullname"].ToString()
    </text>
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <script src="~/Scripts/jquery-3.1.0.min.js"></script>
    <script src="~/Scripts/ImdbRandom.js"></script>
    <meta charset="utf-8" />
    <title>Random</title>
    <style>
        .container {
            text-align: center;
            margin: 0 auto;
            font-weight: 300;
        }

            .container h3 {
                font-weight: normal;
                color: red;
                text-decoration: underline;
            }

        img {
            border: 2px solid black;
            border-radius: 20px;
            opacity: 0.5;
            transition: 0.25s ease-in-out;
        }

            img :hover {
                opacity: 1;
            }

        button {
            cursor: pointer;
            transition: 0.25s ease-in-out;
            width: 100px;
            height: 100px;
            font-size: 20px;
            color: white;
            background-color: black;
            outline: none;
        }

            button:hover {
                background-color: green;
            }
    </style>
    </head>
<body>
    <div class="container">
        <img src="http://www.clker.com/cliparts/q/L/P/Y/t/6/no-image-available-md.png" />
        <br />
        <table>
            <thead>
                <th>Title</th>
            </thead>
            <tbody id="container"></tbody>
        </table>

        <button>Random</button>

    </div>
</body>
</html>
